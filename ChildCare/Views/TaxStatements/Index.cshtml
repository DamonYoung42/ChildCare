@model IEnumerable<ChildCare.Models.TaxStatement>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole("Admin"))
{
    <h1>Tax Statements</h1>
}
else
{
    <h1>Your Tax Statements</h1>
}


<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <div class="row">
        <div class="col-sm-3">
            <input type="button" class="btn btn-primary btn-lg" value="View Monthly Invoices" onclick="location.href='@Url.Action("Index", "Invoices")'" />
        </div>
    </div>
    

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPaid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }

</table>
